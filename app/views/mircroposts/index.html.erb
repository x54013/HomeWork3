<h1>Listing mircroposts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mircroposts.each do |mircropost| %>
      <tr>
        <td><%= mircropost.content %></td>
        <td><%= mircropost.user_id %></td>
        <td><%= link_to 'Show', mircropost %></td>
        <td><%= link_to 'Edit', edit_mircropost_path(mircropost) %></td>
        <td><%= link_to 'Destroy', mircropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mircropost', new_mircropost_path %>
